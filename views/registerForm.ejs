<% include partials/header %>

<div class="container">
  <h1 class='text-center'>Registration</h1>
  <form action='/bars/user/register' method='post'>
  <div class="form-group">
    <label>User Name:</label>
    <input type="text" class="form-control" name='username'placeholder="Enter Name" autofocus>
  </div>
  <div class="form-group">
    <label>Password:</label>
    <input type="password" class="form-control" name='password'placeholder="Enter Password">
  </div>

  <button type="submit" class='btn btn-block btn-info'>Register</button>
</form>

<div class="text-center">
  <h2>Or</h2>
  <a class='btn btn-danger btn-block half' href="/auth">Or Register With Github</a>
  <a class='btn btn-danger btn-block half' href="/auth/google">Or Register With Google</a>
</div>

</div>



