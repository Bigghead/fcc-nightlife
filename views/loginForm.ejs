<% include partials/header %>

<div class="container">
  <h1 class='text-center'>Log In</h1>
  <form action='/bars/user/login' method='post'>
  <div class="form-group">
    <label>User Name:</label>
    <input type="text" class="form-control" name='username'placeholder="Enter Name" autofocus>
  </div>
  <div class="form-group">
    <label>Password:</label>
    <input type="password" class="form-control" name='password'placeholder="Enter Password">
  </div>

  <button type="submit" class='btn btn-block btn-info'>Log in</button>
</form>
    <div class="text-center">
      <h3>Or</h3>
      <a href='/auth/callback' class='btn btn-primary btn-block'>Login With Github</a>
      <a href='/auth/google/callback' class='btn btn-primary btn-block'>Login With Google</a>
    </div>
</div>

